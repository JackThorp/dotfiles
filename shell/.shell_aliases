#!/bin/zsh

alias nv='nvim'
# GIT COMMANDS
alias gs='git status'
alias gco='git commit'
alias gb='git branch'
alias gch='git checkout'
# Git branch search
alias gbs='git branch | fzf| tr -d '\''[:space:]'\'' | xargs git switch'
alias gl='git log -n 10 --oneline'
alias gd='git diff'
alias gds='git diff --staged'
alias ga='git add'
# Use fzf to add without using mouse. Especially helpful when lots to add
alias gadd='git status --short | cut -c4- | fzf -m  --print0 | xargs -0 -t -o git add'
alias gap='git add --patch'
alias gpf='git push --force-with-lease'
alias grm='git checkout master && git pull && git checkout - && git rebase master'
alias gra='git rebase -i --autosquash'
alias grc='git rebase --continue'
alias gre='git rebase --edit-todo'
alias grs='git restore --staged'

# DEVELOPMENT COMMANDS
alias wo='workon'

alias carmine="gh pr list --author 'LordCatello'"
alias armin="gh pr list --author 'armirusco'"
alias shihan="gh pr list --author 'shihanng'"
alias hannah="gh pr list --author 'HannahBoyd123'"
alias darren="gh pr list --author 'pixeldomain'"

alias dt-review="gh search prs --state=open --review-requested=octoenergy/debt-tracking"
alias my-review="gh search prs --state=open --review-requested=@me"

alias open-pr="gh pr view --web"

